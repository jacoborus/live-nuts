{
  "name": "live-nuts",
  "version": "0.0.1",
  "description": "Live HTML template engine using NUTS syntax",
  "main": "index.js",
  "scripts": {
    "test": "npm run build && node ./node_modules/zuul/bin/zuul --ui mocha-bdd -- test/*.js",
    "mtest": "npm run build && sensible-browser ./test/test.html",
    "build-dist": "cat build_assets/start.txt src/live-nuts.js build_assets/end.txt> dist/live-nuts.js",
    "build-node": "cat src/live-nuts.js build_assets/module.txt> live-nuts.js",
    "build": "npm run build-dist && npm run build-node"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jacoborus/live-nuts.git"
  },
  "keywords": [
    "NUTS",
    "html",
    "live-templates",
    "templates",
    "engine"
  ],
  "author": "Jacobo Tabernero - jacobo@xarope.eu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacoborus/live-nuts/issues"
  },
  "homepage": "https://github.com/jacoborus/live-nuts",
  "devDependencies": {
    "chai": "^1.10.0",
    "mocha": "^2.0.1",
    "zuul": "^1.15.2"
  }
}
