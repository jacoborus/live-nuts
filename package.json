{
  "name": "nuts",
  "version": "0.0.1",
  "description": "Live HTML template engine using NUTS syntax",
  "main": "index.js",
  "scripts": {
    "linter": "eslint src test",
    "test": "npm run build && cat dist/tests.js | testling",
    "build": "browserify src/live-nuts.js --standalone Nuts -o dist/live-nuts.js && browserify test/index.js -o dist/tests.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jacoborus/live-nuts.git"
  },
  "testling": {
    "files": "dist/tests.js",
    "browsers": [
      "ie/10..latest",
      "chrome/latest",
      "firefox/latest",
      "safari/latest",
      "opera/latest",
      "iphone/6",
      "ipad/6",
      "android-browser/latest"
    ]
  },
  "keywords": [
    "NUTS",
    "html",
    "live-templates",
    "templates",
    "engine"
  ],
  "author": "Jacobo Tabernero - jacobo@xarope.eu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jacoborus/live-nuts/issues"
  },
  "homepage": "https://github.com/jacoborus/live-nuts",
  "devDependencies": {
    "browserify": "^11.2.0",
    "eslint": "^1.6.0",
    "tape": "^4.2.1",
    "testling": "^1.7.1"
  }
}
